<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="240.0dip"
                android:background="#80000000">

    <ImageView
        android:id="@+id/quiz_image"
        android:layout_width="fill_parent"
        android:layout_height="240.0dip"
        android:background="#b0000000"
        android:contentDescription="@null"
        android:scaleType="centerCrop"/>

    <ImageView
        android:id="@+id/play_background"
        android:layout_width="fill_parent"
        android:layout_height="79.0dip"
        android:layout_alignBottom="@+id/quiz_image"
        android:background="#80000000"
        android:contentDescription="@null"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:id="@+id/titleContainer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/play_background"
        android:layout_marginTop="4.0dip"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/quiz_name"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginStart="10.0dip"
            android:layout_weight="1.0"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textSize="19.5sp"/>
        <ImageView
            android:id="@+id/cont_icon"
            android:layout_width="25.0dip"
            android:layout_height="25.0dip"
            android:layout_marginEnd="6.0dip"
            android:clickable="true"
            android:contentDescription="@null"
            android:src="@drawable/ic_continue"
            android:visibility="gone"/>
    </LinearLayout>

    <TextView
        android:id="@+id/quiz_description"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleContainer"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:layout_marginTop="5.0dip"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@android:color/white"
        android:textSize="12.0sp"/>
</RelativeLayout>